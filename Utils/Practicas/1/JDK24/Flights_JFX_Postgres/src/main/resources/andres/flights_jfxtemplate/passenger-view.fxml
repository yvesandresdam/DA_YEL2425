<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="500.0" maxWidth="400.0" minHeight="500.0" minWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="andres.flights_jfxtemplate.PassengerController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0">
            <children>
            <TextField fx:id="nameField" maxWidth="240.0" prefWidth="240.0" promptText="Insert your name" />
            <TextField fx:id="lastNameField" layoutX="90.0" layoutY="50.0" maxWidth="240.0" prefWidth="240.0" promptText="Insert your last name" />
            <TextField fx:id="passportField" layoutX="90.0" layoutY="95.0" maxWidth="240.0" prefWidth="240.0" promptText="Insert your passport" />
            <TextField fx:id="addressField" layoutX="90.0" layoutY="140.0" maxWidth="240.0" prefWidth="240.0" promptText="Insert your address" />
            <TextField fx:id="phoneField" layoutX="90.0" layoutY="140.0" maxWidth="240.0" prefWidth="240.0" promptText="Insert your phone" />
                <ComboBox fx:id="genderComboBox" minWidth="240.0" prefWidth="200.0" promptText="Select an gender">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ComboBox>
                <Button fx:id="createUserButton" minWidth="240.0" mnemonicParsing="false" text="Create User" onAction="#handleCreateUserButtonAction" />
            </children>
            <padding>
                <Insets top="50.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
